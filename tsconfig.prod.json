{
    "extends": "./tsconfig.declarations.json",
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "out-tsc",
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "src/**/__tests__/**/*",
        "src/**/__mocks__/**/*",
        "src/setupTests.ts",
        "node_modules",
        "**/*.test.ts"
    ]
}
