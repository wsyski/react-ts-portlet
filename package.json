{
  "name": "react-ts-portlet",
  "version": "1.0.0",
  "description": "React typescript portlet",
  "license": "UNLICENSED",
  "main": "index.js",
  "engines": {
    "node": "=16",
    "yarn": "1.x"
  },
  "dependencies": {
    "@liferay/portal-7.4": "*"
  },
  "devDependencies": {
    "@babel/cli": "~7.17.6",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^24.0.5",
    "@types/lodash": "^4.14.119",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/warning": "^3.0.0",
    "@types/yup": "^0.24.9",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "properties-reader": "^2.2.0",
    "react-scripts": "^5.0.1",
    "sass": "^1.60.0",
    "rimraf": "^4.4.1",
    "typescript": "~4.9.5"
  },
  "portlet": {
    "com.liferay.portlet.display-category": "category.sample",
    "com.liferay.portlet.header-portlet-css": "/css/styles.css",
    "com.liferay.portlet.instanceable": true,
    "javax.portlet.name": "react_ts_portlet",
    "javax.portlet.security-role-ref": "power-user,user",
    "javax.portlet.resource-bundle": "content.Language"
  },
  "scripts": {
    "sass": "sass src/css/styles.scss src/css/styles.css --source-map",
    "build-js": "babel --source-maps -d build out-tsc",
    "build": "run-s build-ts && run-s sass && run-s build-js && liferay-npm-bundler",
    "clean": "rimraf out-tsc && liferay clean",
    "deploy": "liferay deploy",
    "build-ts": "tsc -b tsconfig.prod.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
