{
  "name": "react-ts-portlet",
  "version": "1.0.0",
  "description": "React typescript portlet",
  "license": "UNLICENSED",
  "main": "index.js",
  "engines": {
    "node": "=16",
    "yarn": "1.x"
  },
  "dependencies": {
    "@liferay/portal-7.4": "*"
  },
  "devDependencies": {
    "@babel/cli": "~7.17.6",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^24.0.5",
    "@types/lodash": "^4.14.119",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/warning": "^3.0.0",
    "@types/yup": "^0.24.9",
    "cpr": "^3.0.1",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "fs": "^0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "properties-reader": "^2.2.0",
    "typescript": "~4.4.4"
  },
  "portlet": {
    "com.liferay.portlet.display-category": "category.sample",
    "com.liferay.portlet.header-portlet-css": "/css/styles.css",
    "com.liferay.portlet.instanceable": true,
    "javax.portlet.name": "react_ts_portlet",
    "javax.portlet.security-role-ref": "power-user,user",
    "javax.portlet.resource-bundle": "content.Language"
  },
  "scripts": {
    "scss": "gulp scss",
    "scss:watch": "gulp scss:watch",
    "copy-assets": "cpx \"./src/css/**\" build/css",
    "build": "run-s tsc && run-s copy-assets && cross-env NODE_ENV=production liferay build",
    "clean": "liferay clean",
    "deploy": "liferay deploy",
    "tsc": "tsc -b tsconfig.prod.json"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
